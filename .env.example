# =============================================================================
# INVENTORY MANAGEMENT SYSTEM - FRONTEND ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains all the configuration needed for the frontend application
# Copy this file to .env in the project root and modify as needed
# =============================================================================

# Backend API Configuration
# =============================================================================
VITE_API_URL=http://localhost:8000
VITE_API_BASE_URL=http://localhost:8000
REACT_APP_API_URL=http://localhost:8000
REACT_APP_API_BASE_URL=http://localhost:8000

# Application Configuration
# =============================================================================
VITE_APP_TITLE=Inventory Management System
VITE_APP_DESCRIPTION=Complete inventory management system for educational institutions
VITE_APP_VERSION=1.0.0

# Feature Flags
# =============================================================================
VITE_ENABLE_OCR=false
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_BULK_OPERATIONS=true

# UI Configuration
# =============================================================================
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LANGUAGE=en
VITE_ITEMS_PER_PAGE=10
VITE_MAX_FILE_SIZE=50
VITE_ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,xlsx,xls,csv

# Development Configuration
# =============================================================================
VITE_DEV_MODE=true
VITE_SHOW_DEBUG_INFO=false
VITE_MOCK_API=false

# External Services (Optional)
# =============================================================================
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_GOOGLE_MAPS_API_KEY=

# PWA Configuration (Optional)
# =============================================================================
VITE_PWA_ENABLED=false
VITE_PWA_NAME=Inventory Management
VITE_PWA_SHORT_NAME=Inventory
VITE_PWA_THEME_COLOR=#3B82F6
VITE_PWA_BACKGROUND_COLOR=#FFFFFF

# Notification Configuration
# =============================================================================
VITE_NOTIFICATION_TIMEOUT=5000
VITE_ENABLE_BROWSER_NOTIFICATIONS=true
VITE_ENABLE_SOUND_NOTIFICATIONS=false

# Performance Configuration
# =============================================================================
VITE_ENABLE_SERVICE_WORKER=false
VITE_CACHE_API_RESPONSES=true
VITE_CACHE_DURATION=300000

# Security Configuration
# =============================================================================
VITE_ENABLE_CSP=true
VITE_SECURE_COOKIES=false
VITE_ENABLE_HTTPS_REDIRECT=false